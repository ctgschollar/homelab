$ORIGIN schollar.dev.
$TTL 300
@   IN SOA ns.schollar.dev. hostmaster.schollar.dev. (
        20250813   ; serial (YYYYMMDD or increment on change)
        3600       ; refresh
        600        ; retry
        604800     ; expire
        300 )      ; minimum

    IN NS  ns.schollar.dev.
ns  IN A   192.168.3.70

